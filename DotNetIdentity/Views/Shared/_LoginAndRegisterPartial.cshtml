@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

<ul class="navbar-nav ml-auto">
    @if (signInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <a class="nav-link text-white" href="">Hola, @userManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Accounts" asp-action="Logout">
                <button type="submit" class="btn nav-link">Logout</button>
            </form>
        </li>
    } 
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Register">Registro</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Accounts" asp-action="Login">Acceder</a>
        </li>
    }
</ul>